/* pages/energy/energy.wxss */
.enegy_wrap {
  width: 100%;
  height: 100%;
}

.user_bg_img {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.enegy_num_box {
  position: absolute;
  top: 2%;
  left: 0;
  width: 100%;
  text-align: center;
}

.index03_bg_img {
  width: 92rpx;
  height: 92rpx;
}

.num_box {
  position: absolute;
  top: -4%;
  left: 53%;
}

.num {
  width: 38rpx;
  height: 38rpx;
  line-height: 38rpx;
  border-radius: 60%;
  border: 1px solid #000000;
  background: #ffffff;
  color: #ef6b5a;
}

.enegy_count_box {
  position: absolute;
  top: 11%;
  left: 0;
  width: 100%;
  text-align: center;
}

.count_box {
  width: 244rpx;
  height: 52rpx;
  line-height: 52rpx;
  margin: 0 auto;
  border-radius: 22rpx;
  background: #000000;
  opacity: 0.5;
  color: #ffffff;
  font-size: 28rpx;
}

.enegy_item_box {
  position: absolute;
  top: 17%;
  left: 0;
  width: 100%;
  background: #2bc396;
}

.item_box {
  width: 700rpx;
  height: 647rpx;
  margin: 0 auto 42rpx auto;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-sizing: border-box;
  
}

.energy_pravit {
  width: 104rpx;
  height: 104rpx;
  border-radius: 60%;
  border: 1px solid red;
}

.energy_name {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #000000;
}

.enegy_img {
  width: 28rpx;
  height: 42rpx;
}

.wx_name {
  font-size: 29rpx;
  color: #dd300a;
}

.wx_btn {
  width: 147rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  border-radius: 30rpx;
  background-color: #ffe302;
  color: #000000;
}

.wx_img {
  width: 653rpx;
  height: 414rpx;
  border: 1px solid red;
}