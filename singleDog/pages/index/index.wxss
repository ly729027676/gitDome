/**index.wxss**/
@import "../../template/singDog/singDog.wxss";

.index_wrap {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.index_01_box {
  top: 12%;
  height: 60%;
  z-index: 10;
}

.sing01_img {
  width: 100%;
  height: 100%;
}

.user_nike_box {
  top:52%;
  z-index: 10;
}

.input_nike, .picker {
  width: 533rpx;
  height: 103rpx;
  line-height: 103rpx;
  margin: 0 auto;
  color: #ff7a7b;
  font-size: 36rpx;
  border: 2rpx solid #736860;
  border-radius: 12rpx;
  background: #ffffff;
}

.input_nike {
  font-weight: 700;
}

.year_box {
  top: 61%;
  z-index: 10;
}

.picker {
  color: #828282;
}

.sing02_box {
  top: 73%;
}

.sing02_img, .more_img, .sing02_box_w {
  width: 398rpx;
  height: 110rpx;
  margin: 0 auto;
}

.more_box {
  top: 85%;
}

button[plain] {
  border: none;
}

.user_button {
  padding: 0;
  line-height: normal;
}

.more_btn {
  width: 398rpx;
  margin: 0 auto;
  -webkit-transition: all 1s;
  transition: all 1s;
  -webkit-animation: moreani 2s infinite;
  animation: moreani 2s infinite;
}

@keyframes moreani {
  10% {
    transform: scale(1,1)
  }
  50% {
    transform: scale(1.1,1.1)
  }
  100% {
    transform: scale(1,1)
  }
}

@-webkit-keyframes moreani {
  10% {
    transform: scale(1,1)
  }
  50% {
    transform: scale(1.1,1.1)
  }
  100% {
    transform: scale(1,1)
  }
}