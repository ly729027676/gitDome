  top: 5%;
  left: 0;
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.result_bg_img {
  width: 100%;
  height: 100%;
}

.sava_box {
  position: absolute;
  top: 0;
  right: 14%;
  z-index: 5;
}

.sava_img {
  width: 178rpx;
  height: 178rpx;
}

.openSetting {
  background: transparent;
}

.btn_box {
  position: absolute;
  top: 91%;
  left: 0;
  z-index: 5;
  padding: 0 60rpx;
  width: 100%;
  box-sizing: border-box;
}

.share_box, .index_box {
  width: 298rpx;
